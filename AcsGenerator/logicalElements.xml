<?xml version="1.0" encoding="utf-8"?>
<Main id="Main">
    <CheckBox variable="acs_filter_trait_any_sinful" >
        <Icon>"gfx/interface/icons/acs_any_sinful.dds"</Icon>
        <Localisation>"Any sinful"</Localisation>
        <PositiveTrigger>num_sinful_traits = { value > 0 faith = scope:acs_filter_faith }</PositiveTrigger>
        <NegativeTrigger>num_sinful_traits = { value = 0 faith = scope:acs_filter_faith }</NegativeTrigger>
    </CheckBox>
